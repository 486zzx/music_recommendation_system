<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzx.zzx_music_recommendation_system.mapper.LikeInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zzx.zzx_music_recommendation_system.entity.LikeInfo">
        <id column="like_id" property="likeId" />
        <result column="user_id" property="userId" />
        <result column="music_id" property="musicId" />
        <result column="create_user_id" property="createUserId" />
        <result column="modify_user_id" property="modifyUserId" />
        <result column="gmt_created" property="gmtCreated" />
        <result column="gmt_modified" property="gmtModified" />
        <result column="value1" property="value1" />
        <result column="value2" property="value2" />
        <result column="value3" property="value3" />
        <result column="is_delete" property="isDelete" />
    </resultMap>

    <select id="updateMouthRank" resultType="java.lang.String">
        select a.user_id
        from like_info a
        where a.delete_flag = 0 and
        and a.gmt_created between #{startTime} and #{endTime}
        group by a.user_id
        order by COUNT (a.like_id) desc
        limit 20
    </select>

</mapper>
