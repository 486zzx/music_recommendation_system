<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzx.zzx_music_recommendation_system.mapper.MusicInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zzx.zzx_music_recommendation_system.entity.MusicInfo">
        <id column="music_id" property="musicId" />
        <result column="music_name" property="musicName" />
        <result column="music_type" property="musicType" />
        <result column="singer_id" property="singerId" />
        <result column="type_ids" property="typeIds" />
        <result column="listen_times" property="listenTimes" />
        <result column="music_content" property="musicContent" />
        <result column="trend_coefficient" property="trendCoefficient" />
        <result column="create_user_id" property="createUserId" />
        <result column="modify_user_id" property="modifyUserId" />
        <result column="gmt_created" property="gmtCreated" />
        <result column="gmt_modified" property="gmtModified" />
        <result column="value1" property="value1" />
        <result column="value2" property="value2" />
        <result column="value3" property="value3" />
        <result column="is_delete" property="isDelete" />
    </resultMap>

    <select id="getRank" resultType="com.zzx.zzx_music_recommendation_system.vo.RankResVO">
        SELECT A.*
        FROM music_info A
        WHERE A.is_delete = 1
        AND A.music_id IN
        <foreach collection="musicIds" item="musicId" index="index" open="(" separator="," close=")">
            #{musicId}
        </foreach>
    </select>
    <select id="getMusicsPage" resultType="com.zzx.zzx_music_recommendation_system.vo.RankResVO">
        SELECT A.*
        FROM music_info A
        WHERE A.is_delete = 1
        AND A.music_id IN
        <foreach collection="musicIds" item="musicId" index="index" open="(" separator="," close=")">
            #{musicId}
        </foreach>
    </select>

</mapper>
